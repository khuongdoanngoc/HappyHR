<div class="chat-container">
    <div class="chat-box">
        Company Chat
    </div>
        <form id="chat-form" action="">
            <div class="input-group input-group-sm mb-3">
                <span class="input-group-text" id="inputGroup-sizing-sm">Chat</span>
                <input id="chat-input" type="text" class="form-control" aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm">
                <button class="btn chat-btn-send" style="background-color: var(--main-color);">Send</button>
            </div>
        </form>
        {{#if username}}
        <div class="chat-message" data-name="{{username.surname}}">

        </div>
        {{/if}}
</div>

<script src="socket.io/socket.io.js"></script>
<script>
    var socket = io()
    var form = document.getElementById('chat-form')
    var input = document.getElementById('chat-input')

    form.addEventListener('submit', function (e) {
        e.preventDefault()
        if (input.value) {
            socket.emit('on-chat', input.value)
            input.value = ''
        }
    })

    socket.on('user-chat', function (msg) {
        const messageContainer = document.createElement('div')
        const message = document.querySelector('.chat-message')
        const imgElement = document.createElement('img')
        imgElement.src = '../../../public/img/user.icon.png'
        const pElement = document.createElement('p')
        messageContainer.className = 'message'
        const name = message.getAttribute('data-name')
        pElement.textContent = `${name}: ${msg}`
        messageContainer.appendChild(imgElement)
        messageContainer.appendChild(pElement)
        message.appendChild(messageContainer)
    })

</script>